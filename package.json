    "@nestjs/platform-express": "^8.2.4",
    "@nestjs/typeorm": "^8.0.2",
    "bcrypt": "^5.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "dotenv": "^10.0.0",
    "express-mysql-session": "^2.1.7",
    "express-session": "^1.17.2",
    "hbs": "^4.2.0",
